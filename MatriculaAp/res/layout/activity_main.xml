<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            style="@style/cuadroDeTexto"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            
            android:layout_alignParentBottom="true"
            android:text="@string/comentario"
            android:textSize="5pt" />
    </RelativeLayout>
            
            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/tituloMain"
                android:text="@string/lblGeneral"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableLayout>
    

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#4169E1" />

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/cuadroDeTexto"
                    android:layout_weight="1"
                    android:text="@string/lblMatriculadosVirtualmente"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/cuadroDeTexto.fondoPlomo"
                    android:layout_weight="1"
                    android:text="@string/cantidad11"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#4169E1" />

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    style="@style/cuadroDeTexto"
                    android:layout_weight="1"
                    android:text="@string/lblMatriculadosPresencialmente"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/cuadroDeTexto.fondoPlomo"
                    android:layout_weight="1"
                    android:text="@string/cantidad21"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#4169E1" />
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    style="@style/cuadroDeTexto"
                    android:layout_weight="1"
                    android:text="@string/lblMatriculadosPorPrimeraVez"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/cuadroDeTexto.fondoPlomo"
                    android:layout_weight="1"
                    android:text="@string/cantidad21"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <View
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#4169E1" />
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView8"
                    style="@style/cuadroDeTexto"
                    android:layout_weight="1"
                    android:text="@string/lblTotalMatriculados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/cuadroDeTexto.fondoPlomo"
                    android:layout_weight="1"
                    android:text="@string/cantidad21"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <View
                android:id="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#4169E1" />
        </TableLayout>
   

</RelativeLayout>
