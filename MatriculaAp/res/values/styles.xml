<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        <style name="cuadroDeTexto">
        
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">0.2pt</item>
        <item name="android:textSize">7pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="cuadroDeTexto.fondoAzul">
       <item name="android:background">#4169E1</item>
       
    </style>
    <style name="cuadroDeTexto.fondoPlomo">
        <item name="android:background">#696969</item>
       
    </style>
    <style name="cuadroDeTexto.fondoCeleste">
        <item name="android:background">#99CCFF</item>
       
    </style>
    <style name="btnEstadisticas">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#00CCFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
